      <Button layoutX="306.0" layoutY="408.0" onAction="#aceptarAction" style="-fx-background-color: #4B0082; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10; -fx-background-radius: 15;" text="Aceptar y Generar PDF" />
   </children>
</AnchorPane>
