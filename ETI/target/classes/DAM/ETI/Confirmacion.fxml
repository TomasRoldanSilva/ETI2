      <Label alignment="TOP_CENTER" layoutX="149.0" layoutY="252.0" prefHeight="87.0" prefWidth="491.0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #4B0082; -fx-padding: 20;" text="DISFRUTA DE LA LECTURA" />

      <!-- Imagen -->
      <ImageView fitHeight="443.0" fitWidth="451.0" layoutX="36.0" layoutY="115.0" pickOnBounds="true" preserveRatio="true">
